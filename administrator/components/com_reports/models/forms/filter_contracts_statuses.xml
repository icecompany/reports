<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="administrator/components/com_reports/models/fields/">
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_REPORTS_FILTER_COMPANY"
                description="COM_REPORTS_FILTER_COMPANY"
                hint="COM_REPORTS_FILTER_COMPANY"
                autocomplete="off"
                class="js-stools-search-string"
        />
        <field
                name="projects"
                type="Project"
                multiple="true"
                onchange="this.form.submit();"
        />
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_REPORTS_FILTER_ITEM"
                description="COM_REPORTS_FILTER_ITEM"
                onchange="this.form.submit();"
                default="e.title ASC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="0"
                label="COM_REPORTS_FILTER_ITEM"
                description="COM_REPORTS_FILTER_ITEM"
                onchange="this.form.submit();"
        />
    </fields>
</form>